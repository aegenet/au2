{
  "name": "au2",
  "version": "0.1.0",
  "description": "Aurelia 2 Plugins / Tools monorepo",
  "main": "index.mjs",
  "author": "Alexandre Genet",
  "license": "MIT",
  "nyc": {
    "report-dir": "./coverage",
    "temp-dir": "./.nyc_output",
    "sourceMap": true,
    "instrument": true
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "private": "true",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "node ./.build/build-flow.js clean",
    "dependencies": "node ./.build/build-flow.js dependencies",
    "lint": "node ./.build/build-flow.js lint",
    "build": "node ./.build/build-flow.js build",
    "publish": "node ./.build/build-flow.js publish",
    "upgrade": "yarn cache clean && node ./.build/build-flow.js upgrade",
    "upgradeLatest": "yarn cache clean && node ./.build/build-flow.js upgradeLatest",
    "local": "node ./.build/build-flow.js local",
    "local:publish": "node ./.build/build-flow.js localPublish",
    "delete": "node ./.build/build-flow.js deleteNodeModules",
    "test": "node ./.build/build-flow.js test",
    "build-n-test": "yarn run cover:clean && yarn run lint && yarn run build && yarn run test && yarn run cover",
    "codecov": "./node_modules/.bin/codecov",
    "cover:clean": "rimraf ./coverage/ && rimraf ./.nyc_output/",
    "cover:merge": "node ./.build/coverage.merge.js",
    "cover:report": "c8 report -t ./.nyc_output/ --reporter html --reporter text-summary",
    "cover": "yarn run cover:clean && yarn run cover:merge && yarn run cover:report"
  },
  "devDependencies": {
    "@aurelia/ts-jest": "^2.0.0-beta.13",
    "@aurelia/webpack-loader": "^2.0.0-beta.13",
    "@commitlint/cli": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.18",
    "bundle-declarations-webpack-plugin": "^5.1.1",
    "c8": "^9.1.0",
    "css-loader": "^6.10.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.6.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "json": "^11.0.0",
    "mocha": "^10.3.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.72.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^14.1.1",
    "sass-to-string": "^1.6.3",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-mocha": "^10.0.0",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.3",
    "webpack-node-externals": "^3.0.0"
  }
}
