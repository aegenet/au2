{
  "name": "au2",
  "version": "0.1.0",
  "description": "Aurelia 2 Plugins / Tools monorepo",
  "main": "index.mjs",
  "author": "Alexandre Genet",
  "license": "UNLICENSED",
  "nyc": {
    "report-dir": "./coverage",
    "temp-dir": "./.nyc_output",
    "sourceMap": true,
    "instrument": true
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "private": "true",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "node ./.build/build-flow.js clean",
    "dependencies": "node ./.build/build-flow.js dependencies",
    "lint": "node ./.build/build-flow.js lint",
    "build": "node ./.build/build-flow.js build",
    "publish": "node ./.build/build-flow.js publish",
    "upgrade": "yarn cache clean && node ./.build/build-flow.js upgrade",
    "upgradeLatest": "yarn cache clean && node ./.build/build-flow.js upgradeLatest",
    "local": "node ./.build/build-flow.js local",
    "local:publish": "node ./.build/build-flow.js localPublish",
    "delete": "node ./.build/build-flow.js deleteNodeModules",
    "test": "node ./.build/build-flow.js test",
    "build-n-test": "yarn run cover:clean && yarn run lint && yarn run build && yarn run test && yarn run cover",
    "codecov": "./node_modules/.bin/codecov",
    "cover:clean": "rimraf ./coverage/ && rimraf ./.nyc_output/",
    "cover:merge": "node ./.build/coverage.merge.js",
    "cover:report": "nyc report -t ./.nyc_output/ --reporter html --reporter text-summary",
    "cover": "yarn run cover:clean && yarn run cover:merge && yarn run cover:report"
  },
  "devDependencies": {
    "@aurelia/ts-jest": "^2.0.0-beta.9",
    "@aurelia/webpack-loader": "^2.0.0-beta.9",
    "@commitlint/cli": "^17.4.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "bundle-declarations-webpack-plugin": "^4.0.1",
    "codecov": "^3.8.3",
    "css-loader": "^6.7.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.0.0",
    "jest": "^27",
    "jest-transform-stub": "^2.0.0",
    "json": "^11.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.3",
    "rimraf": "^5.0.1",
    "sass": "^1.57.1",
    "sass-lint": "^1.13.1",
    "sass-loader": "^13.2.0",
    "sass-to-string": "^1.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.2",
    "ts-mocha": "^10.0.0",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.5.0",
    "webpack-node-externals": "^3.0.0"
  }
}
