{
  "name": "@aegenet/au2-prism",
  "description": "DRAFT - Aurelia 2 - Prism View/Editor plugin",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "version": "0.1.0",
  "repository": "https://github.com/aegenet/au2/tree/master/packages/au2-prism",
  "license": "UNLICENSED",
  "dependencies": {
    "prismjs": "^1.25.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@aurelia/testing": "latest",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "aurelia": "latest",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "lint:js": "node ./../../node_modules/eslint/bin/eslint src test --ext .js,.ts",
    "lint:css": "node ./../../node_modules/sass-lint/bin/sass-lint -c .sass-lint.yml \"src/**/*.scss\"",
    "lint:html": "node ./../../node_modules/htmlhint/bin/htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "node ./../../node_modules/webpack/bin/webpack serve",
    "build": "rimraf dist && node ./../../node_modules/webpack/bin/webpack --env production",
    "analyze": "rimraf dist && node ./../../node_modules/webpack/bin/webpack --env production --analyze",
    "test": "node ./../../node_modules/jest/bin/jest",
    "tsc": "echo nothing",
    "test-node": "yarn run test",
    "prepare": "npm run build"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "./../../.build/client/setup-after-env.js"
    ],
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./../../node_modules/jest-transform-stub",
      "\\.(ts|html)$": [
        "./../../node_modules/@aurelia/ts-jest",
        {
          "defaultShadowOptions": {
            "mode": "open"
          }
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary",
      "html"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}
