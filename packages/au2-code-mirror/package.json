{
  "name": "@aegenet/au2-code-mirror",
  "description": "DRAFT - Aurelia 2 - CodeMirror (6) plugin",
  "main": "dist/index.js",
  "author": "Alexandre Genet",
  "files": [
    "dist"
  ],
  "version": "999.0.0",
  "repository": "https://github.com/aegenet/au2/tree/master/packages/au2-code-mirror",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-json": "^0.19.1"
  },
  "devDependencies": {
    "@aurelia/testing": "^2.0.0-alpha.33",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "aurelia": "^2.0.0-alpha.33",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "lint:js": "node ./../../node_modules/eslint/bin/eslint src test --ext .js,.ts",
    "lint:css": "node ./../../node_modules/sass-lint/bin/sass-lint -c .sass-lint.yml \"src/**/*.scss\"",
    "lint:html": "node ./../../node_modules/htmlhint/bin/htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "node ./../../node_modules/webpack/bin/webpack serve",
    "build": "node ./../../node_modules/rimraf dist && node ./../../node_modules/webpack/bin/webpack --env production",
    "analyze": "node ./../../node_modules/rimraf dist && node ./../../node_modules/webpack/bin/webpack --env production --analyze",
    "test": "node ./../../node_modules/jest/bin/jest --config ./jest.config.js",
    "tsc": "echo nothing",
    "test-node": "yarn run test"
  }
}
